@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show Data</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <style>
        .tableData {
            border-left: solid 1px #D8C3C3;
            border-top: solid 1px #D8C3C3;
        }

            .tableData th {
                width:190px;
                height:40px;
            }
            .tableData tr th{
                  background-color:magenta;
                  font-style:italic;
                  font-weight:200;
                  font:200;
                  font-size:x-large;
                  font-size-adjust:inherit;
                  font-stretch:expanded;
                  font-variant-caps:all-petite-caps;
            }

            .tableData td, .tableData th {
                border-right: solid 1px #D8C3C3;
                border-bottom: solid 1px #D8C3C3;
                text-align: left;
                padding: 5px;
            }

            .tableData td {
            }

            .tableData th {
                background-color: #FAFAFA;
                padding: 7px 5px;
                border-bottom-color: #9C9C9C;
            }

        .odd {
            background-color: #f3f3f3;
            font:100;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size:x-large;
        }

        .even {
            background-color: #ffffff;
             font:100;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size:x-large;
        }
    </style>
</head>
<body ng-app="Homeapp">
    <ul class="nav nav-pills nav-justified">
        <li class="active"><a href="Index">Create</a></li>
        <li class="active"><a href="Show_data">Show</a></li>
        <li class="active"><a href="Get_data">Get_data</a></li>
        <li class="active"><a href="Get_databyid?id=3">Get_databyid?id=3</a></li>
    </ul>
    <div ng-controller="HomeController">

        <table class="tableData">
            <tr>
                <th>Sr no</th>
                <th>Email</th>
                <th>Password</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Actions</th>
                <th>Delete</th>
            </tr>

            <tr ng-repeat="e in record" ng-class-even="'even'" ng-class-odd="'odd'">
                <td>{{e.Sr_no}}</td>
                <td>{{e.Email}}</td>
                <td>{{e.Password}}</td>
                <td>{{e.Name}}</td>
                <td>{{e.Address}}</td>
                <td>{{e.City}}</td>
                <td><a href="/Home/update_data?id={{e.Sr_no}}">Update</a></td>
                <td><a ng-click="deleterecord(e.Sr_no)">Delete</a></td>
            </tr>

        </table>
    </div>
    <script src="~/Scripts/AngularController/angular.min.js"></script>
    <script src="~/Scripts/AngularController/HomeAngularJS.js"></script>
</body>
</html>

